<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.v7.widget.CardView
            android:id="@+id/hospital1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:padding="16dp"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="8">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="24dp"
                            android:layout_weight="6"
                            android:gravity="left"
                            android:text="Kibogora Hospital"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="22dp"
                            android:layout_weight="6"
                            android:gravity="left"
                            android:text="Main Street, Kigali Downtown"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="20dp"
                            android:layout_weight="6"
                            android:gravity="left"
                            android:text="Tel: +25078844429"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="20dp"
                            android:layout_weight="6"
                            android:gravity="left"
                            android:text="Email: Kibogora@gmail.com"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_action_maps_local_phone" />

                    <ImageView
                        android:id="@+id/navi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_action_maps_navigation" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>

