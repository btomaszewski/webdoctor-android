<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.rit.gis.doctoreducator" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- We need the internet to access the server -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- And we need to be able to write to the SD Card -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- BEGIN Activity declarations for accounts -->
        <activity
            android:name=".account.AccountMain"
            android:label="@string/title_main_activity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".account.LoginActivity"
            android:label="@string/title_main_activity"
            android:parentActivityName=".account.AccountMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".account.AccountMain" />
        </activity>
        <activity
            android:name=".account.RegisterActivity"
            android:label="@string/title_main_activity"
            android:parentActivityName=".account.AccountMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".account.AccountMain" />
        </activity>
        <!-- END account-related Activities -->

        <activity
            android:name="com.artifex.mupdfdemo.MuPDFActivity"
            android:label="@string/title_main_activity">
        </activity>

        <activity
            android:name=".account.DownloadAssetsActivity"
            android:label="@string/title_main_activity">
        </activity>

        <activity android:name=".main.MainActivity"
            android:label="@string/title_main_activity" >
        </activity>

        <activity android:name=".search.SearchActivity"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="com.google.android.gms.actions.SEARCH_ACTION"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
    </application>

</manifest>
